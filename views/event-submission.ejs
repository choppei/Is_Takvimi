<% try { %>
    <%- include('partials/header', {user: [firstName, lastName]}) %>
  <%} catch(error) { %>
    <%- include('partials/header')%>
  <%} %>


<form class="event-submission" action="/<%=appTitle%>/event-submission" method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Proje Adı</label>
        <input name="eventName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Dünya Çevre Günü">
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <div class="md-form mx-1 my-1">
                    <input name="startTime" type="time" id="inputMDEx1" class="form-control">
                    <label for="inputMDEx1">Başlangıç zamanı</label>
                </div>
                
            </div>
            <div class="col-lg-3">
                <div class="md-form mx-1 my-1">
                    <input name="endTime" type="time" id="inputMDEx1" class="form-control">
                    <label for="inputMDEx1">Bitiş zamanı</label>
                </div>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Etkinlik tarihi seç</label>
                <select name="eventMonth" multiple class="form-control" id="exampleFormControlSelect2">
                    <option>Ocak</option>
                    <option>Şubat</option>
                    <option>Mart</option>
                    <option>Nisan</option>
                    <option>Mayıs</option>
                    <option>Haziran</option>
                    <option>Temmuz</option>
                    <option>Ağustos</option>
                    <option>Eylül</option>
                    <option>Ekim</option>
                    <option>Kasım</option>
                    <option>Aralık</option>

                </select>
            </div>
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Etkinlik günü seç</label>
                <select name="eventDay" multiple class="form-control" id="exampleFormControlSelect12">
                    <% for(var i = 1; i <= 31; i++ ){ %>
                    <option><%=i%></option>
                    <%}%>
                </select>
            </div>
            <div class="col-lg-4">
                <label for="exampleFormControlSelect2">Yılı seç</label>
                <select name="eventYear" multiple class="form-control" id="exampleFormControlSelect12">
                    <% for(var i = 2020; i <= 2025; i++ ){ %>
                    <option><%=i%></option>
                    <%}%>
                </select>
            </div>

        </div>
       


    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Ek Bilgiler</label>
        <textarea name="eventInfo" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Barter yapıldı, Outdoor çıkıldı."></textarea>
    </div>
    <div class="form-group">
        <button type ="submit" class="btn btn-secondary">Onayla</button>
        <a href="/"><button type="button" class="btn btn-danger">İptal</button></a>
    </div>
    
</form>



<%- include('partials/footer') %>